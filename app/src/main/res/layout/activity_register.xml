<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".ActivityRegister">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7.3dp"
                    android:background="@drawable/small_cicle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/half_circle"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/half_circle" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="32dp"
                android:gravity="center_horizontal"
                android:text="@string/register"
                android:textColor="#333232"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="14.5dp">

            <View
                android:layout_width="5.6dp"
                android:layout_height="300dp"
                android:background="#38b5f2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="35.6dp"
                android:paddingTop="10dp"
                android:background="@drawable/rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/register_image_profile"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_male"
                                app:civ_border_color="@android:color/black"
                                app:civ_border_width="1dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/register_relative_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/blue_border_rounded_cornwe">

                                <!-- INPUT -->
                                <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                                    android:id="@+id/register_edittext_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/name_icon11"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/name"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:paddingLeft="17dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="12sp" />

                                <!-- ICON -->
                                <ImageView
                                    android:id="@+id/name_icon11"
                                    android:layout_width="14.7dp"
                                    android:layout_height="10.3dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="17dp"
                                    android:src="@drawable/user" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/register_relative_surname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="12.7dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/blue_border_rounded_cornwe">

                                <!-- INPUT -->
                                <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                                    android:id="@+id/register_edittext_surname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/name_icon2"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/surname"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:paddingLeft="17dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:textSize="12sp" />

                                <!-- ICON -->
                                <ImageView
                                    android:id="@+id/name_icon2"
                                    android:layout_width="14.7dp"
                                    android:layout_height="10.3dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="17dp"
                                    android:src="@drawable/user" />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_relative_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->
                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/register_edittext_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/telephone_icon"
                            android:background="@android:color/transparent"
                            android:digits="0123456789"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/telephone_icon"
                            android:layout_width="14.7dp"
                            android:layout_height="14.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/telephone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/register_relative_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->
                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/register_edittext_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/username_icon"
                            android:background="@android:color/transparent"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/username_icon"
                            android:layout_width="14.7dp"
                            android:layout_height="10.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/email" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/register_relative_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->

                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/register_edittext_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:background="@android:color/transparent"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="14.7dp"
                            android:layout_height="10.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/password" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/register_relative_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp">

                        <!-- INPUT -->

                        <!-- ICON -->
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:checkedButton="@id/register_radio_male"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.furkanyilmaz.customfonts.RadioButton_Poppins_Regular
                                android:id="@+id/register_radio_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textSize="12sp" />

                            <com.furkanyilmaz.customfonts.RadioButton_Poppins_Regular
                                android:id="@+id/register_radio_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:text="@string/female"
                                android:textSize="12sp" />

                        </RadioGroup>

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_linear_register"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginTop="40.3dp"
            android:layout_marginBottom="16.7dp"
            android:background="@drawable/half_blue_roundshape"
            android:gravity="center"
            android:orientation="vertical">

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_SemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="#ffffff"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                android:id="@+id/myTextView_Poppins_Medium2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/are_you_already_a_member"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                android:id="@+id/login_text_register2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="onClickLogin"
                android:padding="10dp"
                android:text="@string/sign_in"
                android:textColor="#1566e0"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>