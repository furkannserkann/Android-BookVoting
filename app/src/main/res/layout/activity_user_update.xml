<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ActivityUserUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/userupdate_image_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <com.furkanyilmaz.customfonts.TextView_Poppins_Regular
                android:id="@+id/userupdate_text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Adresi"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/userupdate_relative_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userupdate_image_profile"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                app:civ_border_color="@android:color/black"
                                app:civ_border_width="1dp"
                                android:src="@drawable/ic_male" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.furkanyilmaz.customfonts.Button_Poppins_Regular
                                android:id="@+id/userupdate_button_selectimage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/blue_fill_rounded_color"
                                android:text="@string/select_image"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/userupdate_relative_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_border_rounded_cornwe"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="15dp">

                        <!-- INPUT -->
                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/userupdate_text_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/name_icon11"
                            android:background="@android:color/transparent"
                            android:hint="@string/name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/name_icon11"
                            android:layout_width="14.7dp"
                            android:layout_height="10.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/user" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/userupdate_relative_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->
                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/userupdate_text_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/telephone_icon"
                            android:background="@android:color/transparent"
                            android:digits="0123456789"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/telephone_icon"
                            android:layout_width="14.7dp"
                            android:layout_height="14.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/telephone" />

                    </RelativeLayout>

                    <!--                <RelativeLayout-->
                    <!--                    android:id="@+id/userupdate_relative_email"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_marginLeft="15dp"-->
                    <!--                    android:layout_marginTop="12.7dp"-->
                    <!--                    android:layout_marginRight="15dp"-->
                    <!--                    android:background="@drawable/blue_border_rounded_cornwe">-->

                    <!--                    &lt;!&ndash; INPUT &ndash;&gt;-->
                    <!--                    <TextView-->
                    <!--                        android:id="@+id/userupdate_text_email"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_toRightOf="@+id/username_icon"-->
                    <!--                        android:background="@android:color/transparent"-->
                    <!--                        android:text="@string/email"-->
                    <!--                        android:inputType="textEmailAddress"-->
                    <!--                        android:maxLines="1"-->
                    <!--                        android:paddingLeft="17dp"-->
                    <!--                        android:paddingTop="15dp"-->
                    <!--                        android:paddingBottom="15dp"-->
                    <!--                        android:textCursorDrawable="@drawable/cursor_color"-->
                    <!--                        android:textSize="12sp" />-->

                    <!--                    &lt;!&ndash; ICON &ndash;&gt;-->
                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/username_icon"-->
                    <!--                        android:layout_width="14.7dp"-->
                    <!--                        android:layout_height="10.3dp"-->
                    <!--                        android:layout_centerVertical="true"-->
                    <!--                        android:layout_marginLeft="17dp"-->
                    <!--                        android:src="@drawable/email" />-->

                    <!--                </RelativeLayout>-->

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/userupdate_relative_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->

                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/userupdate_text_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:background="@android:color/transparent"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="14.7dp"
                            android:layout_height="10.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/password" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/userupdate_relative_password2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_border_rounded_cornwe">

                        <!-- INPUT -->

                        <com.furkanyilmaz.customfonts.EditText_Poppins_Regular
                            android:id="@+id/userupdate_text_password2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon2"
                            android:background="@android:color/transparent"
                            android:hint="Tekrar Şifre"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="12sp" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="14.7dp"
                            android:layout_height="10.3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/password" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/register_relative_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12.7dp"
                        android:layout_marginRight="15dp">

                        <!-- INPUT -->

                        <!-- ICON -->
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:checkedButton="@id/register_radio_male"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.furkanyilmaz.customfonts.RadioButton_Poppins_Regular
                                android:id="@+id/userupdate_radio_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textSize="12sp" />

                            <com.furkanyilmaz.customfonts.RadioButton_Poppins_Regular
                                android:id="@+id/userupdate_radio_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:text="@string/female"
                                android:textSize="12sp" />

                        </RadioGroup>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:gravity="center">

                        <com.furkanyilmaz.customfonts.Button_Poppins_Regular
                            android:id="@+id/userupdate_button_changepass"
                            android:layout_width="275dp"
                            android:layout_height="50dp"
                            android:paddingLeft="35dp"
                            android:paddingRight="35dp"
                            android:maxLines="1"
                            android:background="@drawable/blue_fill_rounded_color"
                            android:text="Şifreyi Değiştir"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addbook_relative_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.furkanyilmaz.customfonts.Button_Poppins_Regular
                                android:id="@+id/userupdate_button_close"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:text="İptal"
                                android:paddingLeft="25dp"
                                android:paddingRight="25dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:background="@drawable/blue_border_rounded_red"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.furkanyilmaz.customfonts.Button_Poppins_Regular
                                android:id="@+id/userupdate_button_save"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:paddingLeft="25dp"
                                android:paddingRight="25dp"
                                android:background="@drawable/blue_border_rounded_green"
                                android:text="@string/save"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>