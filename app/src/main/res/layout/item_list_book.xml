<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/itemlistbook_profileimage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    app:riv_corner_radius="10dp"
                    app:riv_border_color="#000000"
                    android:src="@drawable/ic_default_book_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                android:id="@+id/itemlistbook_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0sp"
                android:maxLines="1"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN: "
                    android:textColor="#333232"
                    android:textSize="11sp" />

                <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                    android:id="@+id/itemlistbook_text_isbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78465146154"
                    android:textColor="#333232"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1" />

            <com.furkanyilmaz.customfonts.MyTextView_Poppins_Medium
                android:id="@+id/itemlistbook_text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="4.265 yorum"
                android:textColor="#333232"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>